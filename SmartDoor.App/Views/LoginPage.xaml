<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartDoor.App.Views.LoginPage"
             xmlns:viewModels="clr-namespace:SmartDoor.App.ViewModels"
             Shell.FlyoutItemIsVisible="False"
             Shell.NavBarIsVisible="False"
            >

    <ContentPage.BindingContext>
        <viewModels:LoginViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center"
                     HorizontalOptions="FillAndExpand">
            <Label Text="Username:"/>
            <Entry Placeholder="Username" Text="{Binding Username}" />
            <Label Text="Password:"/>
            <Entry IsPassword="True" Placeholder="Password" Text="{Binding Password}"/>

            <ActivityIndicator
                HorizontalOptions="Center"
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}"
                VerticalOptions="Center" />

            <Button 
                Command="{Binding LoginCommand}"
                Text="Login" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>